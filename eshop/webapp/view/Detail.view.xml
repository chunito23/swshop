<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="eshop.controller.Detail"
>
    <Page
        title="Detalles del Producto"
        showNavButton="true"
        navButtonPress=".onNavBack"
    >
        <content>
            <!-- Slider de imágenes -->
            <FlexBox
                class="sapUiSmallMargin"
                wrap="Wrap"
            >
                <Carousel
                    id="imageCarousel"
                    height="250px"
                />

                <VBox
                    width="200px"
                    class="sapUiSmallMargin"
                    alignItems="Start"
                    justifyContent="SpaceBetween"
                >
                    <Title
                        id="productName"
                        level="H1"
                    />

                    <Text
                        id="productDescription"
                        wrapping="true"
                    />
                    <HBox>
                        <ObjectNumber
                            class="sapUiSmallMarginEnd"
                            id="productPrice"
                            state="Success"
                        />
                        <ObjectStatus id="productStock" />
                    </HBox>

                    <Button
                        id="addToCartButton"
                        text="Añadir al carrito"
                        type="Emphasized"
                        press=".onAddToCartPress"
                    />
                </VBox>
            </FlexBox>
        </content>
    </Page>
</mvc:View>
