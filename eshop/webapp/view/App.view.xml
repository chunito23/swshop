<mvc:View
    controllerName="eshop.controller.App"
    displayBlock="true"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Toolbar
        id="toolbar"
        height="140px"
        width="100%"
    >
        <FlexBox
            wrap="Wrap"
            width="100%"
            height="100%"
            alignItems="Center"
            justifyContent="SpaceAround"
        >
            <!-- Sección Izquierda -->
            <VBox
                class="sapUiVisibleOnlyOnDesktop"
                alignItems="Center"
                justifyContent="Center"
            >
                <Image
                    src="../assets/images/starwarslogo.png"
                    width="10rem"
                    height="4rem"
                />
                <Image
                    src="../assets/images/sable.webp"
                    width="10rem"
                    height="4rem"
                />
            </VBox>

            <ToolbarSpacer />

            <!-- Sección Central -->
            <VBox
                alignItems="Center"
                justifyContent="Center"
            >
                <SearchField placeholder="Buscar producto..." />
                <HBox
                    wrap="Wrap"
                    id="HboxMenus"
                >
               </HBox>
            </VBox>

            <ToolbarSpacer />

            <!-- Sección Derecha -->
            <VBox
                alignItems="Center"
                justifyContent="Center"
            >
                <Image
                    class="sapUiVisibleOnlyOnDesktop"
                    src="../assets/images/sablederecha.jpg"
                    width="10rem"
                    height="4rem"
                />
                <HBox>
                    <Button
                        icon="sap-icon://cart"
                        press=".onOpenPanel"
                    />
                    <Button
                        icon="sap-icon://customer"
                        press=".onOpenPanel"
                    />
                    <Button
                        icon="sap-icon://home"
                        press=".goHome" 
                    />
                </HBox>
            </VBox>
        </FlexBox>
    </Toolbar>

    <!-- Popover del carrito -->
    <Popover
        id="cartPopover"
        placement="Left"
        title="Carrito de Compras"
        contentWidth="300px"
    >
        <ScrollContainer
            width="100%"
            height="300px"
            vertical="true"
        >
            <List
                id="cartList"
                items="{cart>/items}"
            >
                <CustomListItem>
                    <HBox
                        justifyContent="SpaceBetween"
                        alignItems="Center"
                        width="100%"
                    >
                        <Image
                            src="{cart>image}"
                            width="50px"
                            height="50px"
                        />

                        <HBox
                            gap=".5rem"
                            class="sapUiSmallMargin"
                        >
                            <Text text="{cart>name}" />
                            <Text text="{cart>price} {cart>currency}" />
                            <Text text="{= ${cart>quantity} + 'x'}" />
                            <Button
                                text="X"
                                type="Reject"
                                press=".onRemoveFromCart"
                            />
                        </HBox>
                    </HBox>
                </CustomListItem>
            </List>
        </ScrollContainer>
        <Text
            id="totalText"
            text="{= 'Total: ' + ${cart>/total}}"
        />
        <Button
            text="Finalizar Compra"
            type="Emphasized"
            press="onCheckout"
        />
    </Popover>

    <App id="app" />
</mvc:View>
